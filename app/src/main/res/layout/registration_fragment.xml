<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/RegistrationTextView"
                android:text="@string/name" />

            <EditText
                android:id="@+id/registration_name_edit_text"
                style="@style/RegistrationEditText"
                android:hint="@string/your_name" />

            <TextView
                style="@style/RegistrationTextView"
                android:text="@string/surname" />

            <EditText
                android:id="@+id/registration_surname_edit_text"
                style="@style/RegistrationEditText"
                android:hint="@string/your_surname" />

            <TextView
                style="@style/RegistrationTextView"
                android:text="@string/phone_number" />

            <EditText
                android:id="@+id/registration_phone_number_edit_text"
                style="@style/RegistrationEditText"
                android:hint="@string/your_phone_number"
                android:inputType="phone" />

            <TextView
                style="@style/RegistrationTextView"
                android:text="@string/email" />

            <EditText
                android:id="@+id/registration_email_edit_text"
                style="@style/RegistrationEditText"
                android:hint="@string/your_email"
                android:inputType="textEmailAddress" />

            <TextView
                style="@style/RegistrationTextView"
                android:text="@string/password" />

            <EditText
                android:id="@+id/registration_password_edit_text"
                style="@style/RegistrationEditText"
                android:hint="@string/enter_your_password"
                android:inputType="textPassword" />

            <RadioGroup
                android:id="@+id/registration_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/registration_verify_number_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_by_phone_number"/>
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/registration_verify_email_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/verify_by_email"/>
            </RadioGroup>

            <Button
                android:id="@+id/registration_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>